{
  "name": "Cirao",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Chrome extension to change all the images for Ciro Gomes.",
  "homepage_url": "https://github.com/brunopadz/cirao",
  "author": "Bruno Padilha",
  "short_name": "Cirao",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },  
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png"    
  },
  "permissions": [
    "contentSettings"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/cirao.js"
      ]
    }
  ]
}
